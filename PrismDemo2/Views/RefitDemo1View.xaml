<UserControl
    x:Class="PrismDemo2.Views.RefitDemo1View"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrismDemo2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:PrismDemo2.ViewModels"
    d:DataContext="{d:DesignInstance vm:RefitDemo1ViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button
                Width="132"
                Height="48"
                Command="{Binding GetWeatherForecastCommand}"
                Content="GetWeatherForecast" />

            <Button
                Width="132"
                Height="48"
                Margin="8,0,0,0"
                Command="{Binding GetWeatherForecastCommand2}"
                Content="GetWeatherForecast2" />
        </StackPanel>
    </Grid>
</UserControl>
