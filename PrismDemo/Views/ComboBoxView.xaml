<UserControl
    x:Class="PrismDemo.Views.ComboBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrismDemo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:vm="clr-namespace:PrismDemo.ViewModels"
    Width="1600"
    Height="900"
    d:DataContext="{d:DesignInstance vm:ComboBoxViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <ComboBox
            Width="200"
            Height="32"
            IsEditable="True"
            IsTextSearchEnabled="False"
            Text="{Binding SearchText}">
            <ComboBoxItem Content="11111" />
            <ComboBoxItem Content="22222" />
            <ComboBoxItem Content="33333" />
            <ComboBoxItem Content="44444" />
        </ComboBox>
    </Grid>
</UserControl>
