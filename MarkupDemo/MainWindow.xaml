<Window
    x:Class="MarkupDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MarkupDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="{local:ResponsiveSize 19}" />
        </Style>
    </Window.Resources>

    <Border
        Margin="50"
        BorderBrush="LightSeaGreen"
        BorderThickness="{local:ResponsiveSize 122}">
        <Grid Width="{local:ResponsiveSize 200}" Background="LightBlue">
            <TextBlock Text="Test" />
        </Grid>
    </Border>
</Window>
