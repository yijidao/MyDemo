<Window x:Class="MyTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox x:Name="DataTextBox" Width="500"/>
        <Grid Grid.Row="1" Margin="5">
            <Path  Data="{Binding ElementName=DataTextBox, Path=Text}" Stroke="Black" StrokeThickness="1" HorizontalAlignment="Center" >

            </Path>
        </Grid>
    </Grid>
</Window>
