<UserControl
    x:Class="MyDemo.RouterDemo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <local:Route Authority="LineNet">
            <Border
                Width="160"
                Height="80"
                Margin="10"
                Background="LightBlue">
                <TextBlock Text="线网" />
            </Border>
        </local:Route>
        <local:Route Authority="Line">
            <Border
                Width="160"
                Height="80"
                Margin="10"
                Background="LightBlue">
                <TextBlock Text="线路" />
            </Border>
        </local:Route>
        <local:Route Authority="Station">
            <Border
                Width="160"
                Height="80"
                Margin="10"
                Background="LightBlue">
                <TextBlock Text="车站" />
            </Border>
        </local:Route>
    </StackPanel>
</UserControl>
