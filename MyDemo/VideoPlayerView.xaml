    <Grid>
        <wpf:VideoView
            x:Name="videoView"
            Background="Black"
            BorderThickness="1">
            <Grid
                x:Name="backPanel"
                Margin="10"
                Background="#01000000">
                <Border
                    x:Name="monitorName"
                    Height="20"
                    Margin="0,0,0,-10"
                    VerticalAlignment="Bottom"
                    Background="#BF000000"
                    Visibility="Collapsed">
                    <TextBlock Foreground="#ffffff" Text="{Binding Name}" />
                </Border>
                <Grid x:Name="faultTip" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Image
                        x:Name="faultIcon"
                        Width="44"
                        Height="44"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        Source="{StaticResource Fault}" />
                </Grid>

                <Grid x:Name="stopTip" Opacity=".2">
                    <Image
                        x:Name="stopIcon"
                        Width="44"
                        Height="44"
                        Margin="0"
                        VerticalAlignment="Center"
                        Source="{StaticResource Monitor}" />
                </Grid>

                <Button
                    x:Name="fullScreenButton"
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    BorderThickness="0"
                    Visibility="Collapsed">
                    <Image Source="{StaticResource FullScreen}" Style="{StaticResource ImageStyle}" />
                </Button>
                <Button
                    x:Name="restoreScreenButton"
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="Transparent"
                    BorderThickness="0"
                    Visibility="Collapsed">
                    <Image Source="{StaticResource RestoreScreen}" Style="{StaticResource ImageStyle}" />
                </Button>
            </Grid>
        </wpf:VideoView>
    </Grid>
</UserControl>
