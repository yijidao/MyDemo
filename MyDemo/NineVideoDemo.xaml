    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <UniformGrid
                x:Name="screenContain"
                Margin="10"
                Rows="3" />

            <Border
                Grid.Row="1"
                Background="#FF18486F"
                Opacity="0.85">
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <UniformGrid Columns="3" RadioButton.Checked="SplitScreenButton_OnChecked">
                        <RadioButton x:Name="niceSplit" Margin="12">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Grid>
                                        <Image
                                            x:Name="image1"
                                            Source="{StaticResource NineSplitImage}"
                                            Style="{StaticResource ImageStyle}" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="image1" Property="Source" Value="{StaticResource ActiveNineSplitImage}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <RadioButton x:Name="fourSplit">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Grid>
                                        <Image
                                            x:Name="image1"
                                            Source="{StaticResource FourSplitImage}"
                                            Style="{StaticResource ImageStyle}" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="image1" Property="Source" Value="{StaticResource ActiveFourSplitImage}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <RadioButton x:Name="oneSplit">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Grid>
                                        <Image
                                            x:Name="image1"
                                            Source="{StaticResource OneSplitImage}"
                                            Style="{StaticResource ImageStyle}" />
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="image1" Property="Source" Value="{StaticResource ActiveOneSplitImage}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </UniformGrid>
                    <UniformGrid>
                        <ToggleButton
                            x:Name="playButton"
                            Margin="15,12,25,12"
                            IsChecked="True">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Grid>
                                        <Image
                                            x:Name="image1"
                                            Source="{StaticResource StartPlay}"
                                            Style="{StaticResource ImageStyle}" />
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CheckStates">
                                                <VisualState x:Name="Checked" />
                                                <VisualState x:Name="UnChecked" />
                                                <VisualState x:Name="Indeterminate" />
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="image1" Property="Source" Value="{StaticResource StopPlay}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </UniformGrid>
                </StackPanel>
            </Border>

        </Grid>
    </Grid>
</UserControl>
