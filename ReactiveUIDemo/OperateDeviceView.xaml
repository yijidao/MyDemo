<rui:ReactiveUserControl x:Class="ReactiveUIDemo.OperateDeviceView"
                         x:TypeArguments="local:OperateDeviceViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReactiveUIDemo"
             xmlns:rui="http://reactiveui.net"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TreeView x:Name="devices">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="local:RegionDetailViewModel" ItemsSource="{Binding Devices}">
                    <TextBlock Text="{Binding Name}"></TextBlock>
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate DataType="{x:Type local:DeviceViewModel}">
                            <CheckBox Content="{Binding Name}" IsChecked="{Binding Selected}"></CheckBox>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</rui:ReactiveUserControl>
