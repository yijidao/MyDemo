<rtu:ReactiveUserControl x:Class="ReactiveUIDemo.LineDetailView"
                         x:TypeArguments="local:LineDetailViewModel"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:ReactiveUIDemo"
                         xmlns:rtu="http://reactiveui.net"
                         mc:Ignorable="d" 
                         d:DesignHeight="450" d:DesignWidth="800"
                         >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="isSelect"></CheckBox>
        <TextBlock Grid.Column="1" x:Name="lineName"></TextBlock>
    </Grid>
</rtu:ReactiveUserControl>
