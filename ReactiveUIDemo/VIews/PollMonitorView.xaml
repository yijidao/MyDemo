<UserControl x:Class="ReactiveUIDemo.Views.PollMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReactiveUIDemo.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:vm="clr-namespace:ReactiveUIDemo.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance vm:PollMonitorViewModel}">
    <UserControl.Resources>

        <Style x:Key="ItemContainStyle">
            <Setter Property="Control.Margin" Value="2"></Setter>
            <Setter Property="Control.Width" Value="81"></Setter>
            <Setter Property="Control.Height" Value="28"></Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="#1A4868">
            <ItemsControl Background="Transparent" ItemsSource="{Binding MainPollMonitorList}" DisplayMemberPath="Name"
                          ItemContainerStyle="{StaticResource ItemContainStyle}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"></StackPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
            </ItemsControl>
            <Button Background="Transparent" Height="16" Width="3">
                <Path Fill="#ffffff" Data="M512.099987 0.129983c53.01327 0 95.987814 42.974544 95.987814 95.987815s-42.974544 95.987814-95.987814 95.987814c-34.295646 0-65.981623-18.297677-83.129446-47.993907a95.981815 95.981815 0 0 1 0-95.987814 95.972816 95.972816 0 0 1 83.129446-47.993908z m0 417.227032c53.01327 0 95.987814 42.974544 95.987814 95.987814s-42.974544 95.987814-95.987814 95.987814-95.987814-42.974544-95.987814-95.987814 42.974544-95.987814 95.987814-95.987814z m0 414.667357c53.01327 0 95.987814 42.974544 95.987814 95.987814s-42.974544 95.987814-95.987814 95.987814-95.987814-42.974544-95.987814-95.987814 42.974544-95.987814 95.987814-95.987814z"></Path>
            </Button>

            <Popup>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ItemsControl ItemsSource="{Binding MorePollMonitorList}" DisplayMemberPath="Name"
                                  ItemContainerStyle="{StaticResource ItemContainStyle}">
                    </ItemsControl>
                    <Button Grid.Row="1" Content="路线管理"></Button>
                </Grid>
            </Popup>
        </StackPanel>
        <ContentControl Grid.Row="1" Width="620" Height="364"></ContentControl>
    </Grid>
</UserControl>
