    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Margin="24,0,24,24">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <TextBlock Style="{StaticResource TextBlock1}" Text="当前配置文件：" />
                <TextBox
                    Width="800"
                    Style="{StaticResource VisualWaterTextBox2}"
                    Text="{Binding ConfigPath}" />
                <Button
                    Height="32"
                    Margin="16,0,0,0"
                    Padding="16,0"
                    Background="#00B0B3 "
                    BorderBrush="#17557F"
                    BorderThickness="1"
                    Command="{Binding LoadConfigCommand}"
                    Content="加载配置"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#fff" />
                <Button
                    Height="32"
                    Margin="8,0,0,0"
                    Padding="16,0"
                    Background="Transparent "
                    BorderBrush="#17557F"
                    BorderThickness="1"
                    Command="{Binding SaveConfigCommand}"
                    Content="保存配置"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#fff" />
                <Button
                    Height="32"
                    Margin="8,0,0,0"
                    Padding="16,0"
                    Background="Transparent "
                    BorderBrush="#17557F"
                    BorderThickness="1"
                    Command="{Binding CheckConfigCommand}"
                    Content="校验配置"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#fff" />
                <Button
                    Height="32"
                    Margin="8,0,0,0"
                    Padding="16,0"
                    Background="Transparent"
                    BorderBrush="#17557F"
                    BorderThickness="1"
                    Command="{Binding NotepadCommand}"
                    Content="记事本打开"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#fff" />
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" Margin="24,0">
            <ItemsControl
                Margin="0,0"
                ItemTemplateSelector="{StaticResource Selector}"
                ItemsSource="{Binding ConfigSections}" />
        </ScrollViewer>
    </Grid>
</UserControl>
