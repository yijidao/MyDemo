            <lvchart:CartesianChart.AxisY>
                <lvchart:Axis x:Name="axisY"></lvchart:Axis>
            </lvchart:CartesianChart.AxisY>--><!--
        </lvchart:CartesianChart>
    </Canvas>-->

</UserControl>
