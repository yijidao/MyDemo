<rui:ReactiveUserControl x:Class="RxUIDemo2.Views.RecommendView"
                         x:TypeArguments="vm:RecommendViewModel"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                         xmlns:local="clr-namespace:RxUIDemo2.Views"
                         xmlns:vm="clr-namespace:RxUIDemo2.ViewModels"
                         xmlns:rui="http://reactiveui.net"
                         mc:Ignorable="d" 
                         d:DesignHeight="450" d:DesignWidth="800" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="username" />
        <Button x:Name="close" Content="关闭" BorderThickness="0" Background="Transparent" Foreground="LightGray"></Button>
    </Grid>
</rui:ReactiveUserControl>
